{
  "plugins": {
    "services": [
      {
        "name": "bot-service",
        "rootDirectory": "packages/bot-service",
        "port": 3000,
        "buildCommand": "npm run build -- --workspace=bot-service",
        "startCommand": "npm run start -- --workspace=bot-service",
        "envVars": {
          "PORT": "3000",
          "BOT_TOKEN": "",
          "API_BASE_URL": "http://localhost:3002"
        }
      },
      {
        "name": "pricing-service",
        "rootDirectory": "packages/pricing-service",
        "port": 3002,
        "buildCommand": "npm run build -- --workspace=pricing-service",
        "startCommand": "npm run start -- --workspace=pricing-service",
        "envVars": {
          "PORT": "3002"
        }
      }
    ]
  }
}
